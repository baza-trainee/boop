generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id        Int      @id @default(autoincrement())
  location  String
  imageUrl  String
  imageId   String
  createdAt DateTime @default(now())
}

model Blog {
  id      Int      @id @default(autoincrement())
  imageId    String
  imageUrl   String
  location   String
  createdAt  DateTime @default(now())
  titleUA String   @db.VarChar(70)
  titleEN String   @db.VarChar(70)
  titleIT String   @db.VarChar(70)
  textUA  String
  textEN  String
  textIT  String
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String
  documentUrl String
  documentId  String
  createdAt   DateTime @default(now())
}

model News {
  id         Int      @id @default(autoincrement())
  sourceLink String
  createdAt  DateTime @default(now())
  imageId    String
  imageUrl   String
  location   String
  textEN     String
  textIT     String
  textUA     String
  titleEN    String
  titleIT    String
  titleUA    String
}
