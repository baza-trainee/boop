generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id          String   @id @default(uuid())
  title       String
  documentUrl String
  documentId  String
  createdAt   DateTime @default(now())
}

model Photo {
  id        String   @id @default(uuid())
  location  String
  imageUrl  String
  imageId   String
  createdAt DateTime @default(now())
}

model Team {
  id       String @id @default(uuid())
  nameUa   String
  nameEn   String
  nameIt   String
  imageUrl String
  imageId  String
}

model Testimonial {
  id        String   @id @default(uuid())
  nameUa    String
  nameEn    String
  nameIt    String
  reviewUa  String
  reviewEn  String
  reviewIt  String
  imageUrl  String
  imageId   String
  createdAt DateTime @default(now())
}

model Contacts {
  id        String @id @default(uuid())
  phone     String
  email     String
  facebook  String
  instagram String
  addressUa String
  addressEn String
  addressIt String
}

model Applications {
  id          String @id @default(uuid())
  name        String
  email       String
  phone       String
  social      String
  isProcessed Boolean
  createdAt   DateTime @default(now())
}

model Blog {
  id        Int      @id @default(autoincrement())
  titleUA   String   @db.VarChar(70)
  titleEN   String   @db.VarChar(70)
  titleIT   String   @db.VarChar(70)
  textUA    String
  textEN    String
  textIT    String
  createdAt DateTime @default(now())
  imageId   String
  imageUrl  String
  location  String
}

model News {
  id         Int      @id @default(autoincrement())
  sourceLink String
  createdAt  DateTime @default(now())
  imageId    String
  imageUrl   String
  location   String
  textEN     String
  textIT     String
  textUA     String
  titleEN    String
  titleIT    String
  titleUA    String
}

model CounterItem {
  id      Int    @id @default(autoincrement())
  number  Int
  text    String
  variant String
  order   Int    @default(autoincrement())
}

model PartnersFriends {
  id        String   @id @default(uuid())
  logoUrl   String
  logoId    String
  link      String
  section   String
  createdAt DateTime @default(now())
}
